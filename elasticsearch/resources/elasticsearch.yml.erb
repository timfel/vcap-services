node.name: <%=name%>
path:
  conf: <%=conf_dir%>
  data: <%=data_dir%>
  work: <%=work_dir%>
  logs: <%=logs_dir%>
  plugins: <%=plugins_dir%>
index:
  number_of_shards: 1
  number_of_replicas: 0
http:
  port: <%=port%>
  basic:
    enabled: true
    user: <%=username%>
    password: <%=password%>
# disable node discovery via multicast
discovery.zen.ping.multicast.enabled: false
# disable shutdown REST API
action.disable_shutdown: true
